{
  "software": [
    {
      "name": "Mail server stack: In memory database",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.MEMORY_DATABASE.NAME}}"
          },
          {
            "type": "portRequired",
            "value": "{{SERVICE.MEMORY_DATABASE.PORTS.PORT_EXPOSED}}"
          },
          {
            "type": "deploy",
            "value": "Definitions/Docker/Redis:{{DOCKER.DOCKER_HOME}}/Redis"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.DOCKER_HOME}}/Redis"
          },
          {
            "type": "check",
            "value": "{{SERVICE.MEMORY_DATABASE.NAME}}"
          },
          {
            "type": "command",
            "value": "redis-cli -h {{SERVICE.MEMORY_DATABASE.HOST}} -p {{SERVICE.MEMORY_DATABASE.PORTS.PORT_EXPOSED}} ping"
          },
          {
            "type": "command",
            "value": "ln -s {{DOCKER.DOCKER_HOME}}/Redis/database.redis.service /etc/systemd/system/database.redis.service"
          },
          {
            "type": "command",
            "value": "systemctl enable database.redis.service"
          },
          {
            "type": "reboot",
            "value": "120"
          },
          {
            "type": "check",
            "value": "{{SERVICE.MEMORY_DATABASE.NAME}}"
          },
          {
            "type": "command",
            "value": "redis-cli -h {{SERVICE.MEMORY_DATABASE.HOST}} -p {{SERVICE.MEMORY_DATABASE.PORTS.PORT_EXPOSED}} ping"
          }
        ]
      }
    }
  ]
}